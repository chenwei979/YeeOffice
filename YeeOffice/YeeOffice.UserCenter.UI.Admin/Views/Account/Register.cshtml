@{
    Layout = "_LayoutAccount";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">请注册</h3>
            </div>
            <div class="panel-body">
                <form role="form" method="post" action="/Account/Login/">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="UserName" name="用户名" type="text" autofocus />
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="密码" type="password" value="" />
                        </div>
                        <input type="submit" class="btn btn-lg btn-success btn-block" value="确定" />
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>